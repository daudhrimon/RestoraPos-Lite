<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/crossBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/selector_cross_btn"
            android:clickable="true"
            android:padding="5dp"
            android:src="@drawable/ic_close"
            android:visibility="invisible"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/msgTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_36sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:fontFamily="@font/helvetica_neue"
            android:padding="@dimen/_10sdp"
            android:text="What do you want to do with this Food ?"
            android:textColor="@color/color_red"
            android:textSize="@dimen/_13sdp" />

        <Button
            android:id="@+id/editBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msgTv"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:backgroundTint="@color/theme_color"
            android:fontFamily="@font/helvetica_neue"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dltBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msgTv"
            android:layout_marginEnd="@dimen/_11sdp"
            android:layout_toStartOf="@id/editBtn"
            android:backgroundTint="#C60000"
            android:fontFamily="@font/helvetica_neue"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>