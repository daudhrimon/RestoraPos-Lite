<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/theme_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/helvetica_nueu_light"
                android:text="Select Payment Method"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/closeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_cross_btn"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_close_white"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomLayout"
            android:layout_below="@+id/appbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/mergeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/no_radius_background"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/helvetica_neue"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Sl."
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:fontFamily="@font/helvetica_neue"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Order"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:fontFamily="@font/helvetica_neue"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Total"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/helvetica_neue"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Paid"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/helvetica_neue"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="Due"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B5B2B2" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mergeOrderRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5F5F5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/totalAmountHeader"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:text="Total Amount"
                                    android:textColor="#888888"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/totalAmountTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/totalAmountHeader"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:text="0.00"
                                    android:textColor="@color/theme_color"
                                    android:textSize="15dp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/totalDueHeader"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:text="Total Due"
                                    android:textColor="#888888"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/totalDueTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/totalDueHeader"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:text="0.00"
                                    android:textColor="@color/theme_color"
                                    android:textSize="15dp" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/payableHeader"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:text="Payable Amount"
                                    android:textColor="#888888"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/payableAmountTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/payableHeader"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:text="0.00"
                                    android:textColor="@color/theme_color"
                                    android:textSize="15dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/changeHeader"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:text="Total Due"
                                    android:textColor="#888888"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/changeAmountTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/changeHeader"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:text="0.00"
                                    android:textColor="@color/theme_color"
                                    android:textSize="15dp" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/addDis"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_36sdp"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardCornerRadius="7dp"
                            tools:ignore="TouchTargetSizeCheck">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:drawableLeft="@drawable/ic_baseline_add_green"
                                android:fontFamily="@font/helvetica_neue"
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:text=" Add Discount "
                                android:textColor="#000"
                                android:textSize="15sp" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/distLay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/typeHeader"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:text="Discount Type"
                                    android:textColor="@color/theme_color"
                                    android:textSize="15sp" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_below="@id/typeHeader"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/no_radius_background">

                                    <Spinner
                                        android:id="@+id/spinnerdiscountType"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:background="@android:color/transparent"
                                        android:foreground="?attr/selectableItemBackground"
                                        android:gravity="center"
                                        android:popupBackground="@color/white"
                                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_drop" />

                                </RelativeLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/discountHeader"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:text="Discount "
                                    android:textColor="@color/theme_color"
                                    android:textSize="15sp" />

                                <EditText
                                    android:id="@+id/discountEt"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_31sdp"
                                    android:layout_below="@+id/discountHeader"
                                    android:background="@drawable/no_radius_background"
                                    android:digits="0123456789."
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:hint="discount amount"
                                    android:inputType="number"
                                    android:paddingHorizontal="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="15sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </RelativeLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/payment"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/selector_ongoing"
                            android:fontFamily="@font/helvetica_nueu_light"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:text="Payment"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/paymentOptionsRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/vh_payment" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addNewPaymentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#17973E"
                android:fontFamily="@font/helvetica_nueu_light"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Add New Payment"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/payNowTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:layout_margin="10dp"
                android:background="@drawable/selector_today"
                android:fontFamily="@font/helvetica_nueu_light"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Pay &amp; Print"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>