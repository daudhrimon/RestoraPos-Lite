<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="7dp">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ongoing_card_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/unselected_ongoing" />

        <TextView
            android:id="@+id/cusName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica_nueu_light"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:text="Walkin "
            android:textSize="12dp" />
        <TextView
            android:id="@+id/orderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica_nueu_light"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_margin="5dp"
            android:text="105 "
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/waiterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica_nueu_light"
            android:gravity="start"
            android:paddingLeft="5dp"
            android:layout_margin="5dp"
            android:text="Ainal"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tableName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica_nueu_light"
            android:gravity="start"
            android:padding="5dp"
            android:text="Table No : 01 "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:background="@color/theme_color"
            android:textSize="15dp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

</androidx.cardview.widget.CardView>