<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/udItemCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="7dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/selector_cross_btn"
        android:clickable="true"
        android:padding="3dp"
        android:src="@drawable/ic_close_white"
        app:tint="@color/black"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/udItemTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:fontFamily="@font/helvetica_nueu_light"
            android:text="Favourite Address"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/udItemEt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:layout_below="@+id/udItemTv"
            android:background="@drawable/no_radius_background"
            android:fontFamily="@font/helvetica_nueu_light"
            android:hint="Customer Address"
            android:paddingHorizontal="@dimen/_11sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/udItemDel"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/selector_today"
            android:fontFamily="@font/helvetica_nueu_light"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/udItemUp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/selector_ongoing"
            android:fontFamily="@font/helvetica_nueu_light"
            android:gravity="center"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

</LinearLayout>