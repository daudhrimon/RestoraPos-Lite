<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2.5dp"
    android:background="@drawable/selector_add_food_image"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/itemTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="10dp"
        android:layout_toStartOf="@id/itemEditBtn"
        android:fontFamily="@font/helvetica_nueu_light"
        android:text="Item"
        android:textSize="@dimen/_12sdp" />

    <ImageView
        android:id="@+id/itemEditBtn"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_centerVertical="true"
        android:layout_marginVertical="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/itemDltBtn"
        android:background="@drawable/selector_today"
        android:clickable="true"
        android:padding="6dp"
        android:src="@drawable/pencil"
        app:tint="@color/white"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/itemDltBtn"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginVertical="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/selector_close"
        android:clickable="true"
        android:padding="5dp"
        android:src="@drawable/ic_delete"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

</RelativeLayout>