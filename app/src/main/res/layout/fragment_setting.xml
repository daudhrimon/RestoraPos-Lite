<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.SettingFragment"
    android:orientation="vertical"
    android:background="@color/bg_color">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/bottom_rounded_bg"
        android:paddingVertical="@dimen/_4sdp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="6dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/selector_cross_btn"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            app:tint="@color/back_btn_tint"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_toRightOf="@+id/back"
            android:fontFamily="@font/helvetica_nueu_light"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:text="Admin Panel"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Add Payment Module-->
            <androidx.cardview.widget.CardView
                android:id="@+id/payCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:id="@+id/ic_pay"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="7dp"
                            android:src="@drawable/ic_pay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="6dp"
                            android:layout_toStartOf="@id/ic_pay_e"
                            android:layout_toEndOf="@+id/ic_pay"
                            android:fontFamily="@font/helvetica_nueu_light"
                            android:text="Add New payment Method"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />

                        <ImageView
                            android:id="@+id/ic_pay_e"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_drop" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/payLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"
                        android:animationCache="true"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            app:cardCornerRadius="7dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F5F5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="15dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:text="Select Payment Type"
                                    android:textSize="15sp"
                                    android:textColor="@color/theme_color"
                                    android:fontFamily="@font/helvetica_nueu_light"/>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_34sdp"
                                    android:background="@drawable/no_radius_background"
                                    android:layout_marginVertical="5dp">

                                    <Spinner
                                        android:id="@+id/typeSpinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:background="@android:color/transparent"
                                        android:foreground="?attr/selectableItemBackground"
                                        android:gravity="center"
                                        android:popupBackground="@color/white"
                                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_drop" />

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="7dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F5F5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingHorizontal="15dp"
                                android:paddingVertical="10dp"
                                android:animateLayoutChanges="true"
                                android:animationCache="true">

                                <EditText
                                    android:id="@+id/terminal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:layout_below="@+id/custometrHeader"
                                    android:background="@drawable/no_radius_background"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:hint=" Enter Card Terminal"
                                    android:padding="10dp"
                                    android:textColor="#000"
                                    android:textSize="15sp"
                                    tools:ignore="TouchTargetSizeCheck"
                                    android:visibility="gone"/>

                                <EditText
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:layout_below="@+id/custometrHeader"
                                    android:background="@drawable/no_radius_background"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:hint=" Enter Payment Name"
                                    android:padding="10dp"
                                    android:textColor="#000"
                                    android:textSize="15sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                                <TextView
                                    android:id="@+id/addBtn"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_34sdp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/selector_ongoing"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:text="Add Payment"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--Vat/Tax Module-->
            <androidx.cardview.widget.CardView
                android:id="@+id/vatCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:animateLayoutChanges="true"
                    android:animationCache="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:id="@+id/icVat"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="7dp"
                            android:src="@drawable/ic_vat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="6dp"
                            android:layout_toStartOf="@id/icVatE"
                            android:layout_toEndOf="@id/icVat"
                            android:fontFamily="@font/helvetica_nueu_light"
                            android:text="Set Global Vat/Tax in %"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />

                        <ImageView
                            android:id="@+id/icVatE"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_drop" />

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/vatLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F5F5F5"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="10dp"
                            android:animateLayoutChanges="true">

                            <EditText
                                android:id="@+id/vatEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_below="@+id/custometrHeader"
                                android:background="@drawable/no_radius_background"
                                android:fontFamily="@font/helvetica_nueu_light"
                                android:hint=" Enter Payment Name"
                                android:padding="10dp"
                                android:textColor="#000"
                                android:textSize="15sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:id="@+id/setVatBtn"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/selector_ongoing"
                                android:clickable="true"
                                android:focusable="true"
                                android:fontFamily="@font/helvetica_nueu_light"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:text="Set Vat/Tax"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                tools:ignore="TouchTargetSizeCheck" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!--Service Charge Module-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:animateLayoutChanges="true"
                    android:animationCache="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:id="@+id/icCrg"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="7dp"
                            android:src="@drawable/ic_crg" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="6dp"
                            android:layout_toStartOf="@id/icCrgE"
                            android:layout_toEndOf="@id/icCrg"
                            android:fontFamily="@font/helvetica_nueu_light"
                            android:text="Set Global Service Charge in %"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />

                        <ImageView
                            android:id="@+id/icCrgE"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_drop" />

                    </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/crgLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5F5F5"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="10dp"
                        android:animateLayoutChanges="true">

                        <EditText
                            android:id="@+id/crgEt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:layout_below="@+id/custometrHeader"
                            android:background="@drawable/no_radius_background"
                            android:fontFamily="@font/helvetica_nueu_light"
                            android:hint=" Enter Payment Name"
                            android:padding="10dp"
                            android:textColor="#000"
                            android:textSize="15sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/setCrgBtn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/selector_ongoing"
                            android:clickable="true"
                            android:focusable="true"
                            android:fontFamily="@font/helvetica_nueu_light"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:text="Set Service Charge"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--Service Charge Module-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:animateLayoutChanges="true"
                    android:animationCache="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:id="@+id/icCrnc"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            android:src="@drawable/ic_currency" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="6dp"
                            android:layout_toStartOf="@id/icCrncE"
                            android:layout_toEndOf="@id/icCrnc"
                            android:fontFamily="@font/helvetica_nueu_light"
                            android:text="Set Global Currency"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />

                        <ImageView
                            android:id="@+id/icCrncE"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_drop" />

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/crncLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F5F5F5"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="10dp"
                            android:animateLayoutChanges="true">

                            <TextView
                                android:id="@+id/crncTv"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_69sdp"
                                android:layout_marginVertical="10dp"
                                android:layout_below="@+id/custometrHeader"
                                android:background="@drawable/selector_add_food_image"
                                android:fontFamily="@font/helvetica_nueu_light"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textSize="@dimen/_20sdp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <ImageView
                                android:id="@+id/addCurrency"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_69sdp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/selector_add_food_image"
                                android:foreground="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:padding="@dimen/_9sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_currency"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:id="@+id/setCrncBtn"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_34sdp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/selector_ongoing"
                                android:clickable="true"
                                android:focusable="true"
                                android:fontFamily="@font/helvetica_nueu_light"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center"
                                android:text="Set Currency"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                tools:ignore="TouchTargetSizeCheck" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!--Service Charge Module-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:animateLayoutChanges="true"
                    android:animationCache="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginHorizontal="10dp">

                        <ImageView
                            android:id="@+id/icRes"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="8dp"
                            android:src="@drawable/ic_res_inf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="6dp"
                            android:layout_toStartOf="@id/icResE"
                            android:layout_toEndOf="@id/icRes"
                            android:fontFamily="@font/helvetica_nueu_light"
                            android:text="Set Restaurant Info"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />

                        <ImageView
                            android:id="@+id/icResE"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_drop" />

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/resLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="7dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F5F5F5"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/addCview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F5F5F5"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_18sdp">

                                <TextView
                                    android:id="@+id/nameHeader"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:text="Restaurant Name"
                                    android:textColor="@color/theme_color"
                                    android:textSize="@dimen/_12sdp" />

                                <EditText
                                    android:id="@+id/resNameEt"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_34sdp"
                                    android:layout_below="@+id/nameHeader"
                                    android:background="@drawable/no_radius_background"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:hint="Restaurant Name"
                                    android:inputType="textCapWords"
                                    android:paddingHorizontal="11dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp">

                                <TextView
                                    android:id="@+id/emailHeader"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:text="Email"
                                    android:textColor="@color/theme_color"
                                    android:textSize="@dimen/_12sdp" />

                                <EditText
                                    android:id="@+id/resEmailEt"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_34sdp"
                                    android:layout_below="@+id/emailHeader"
                                    android:background="@drawable/no_radius_background"
                                    android:fontFamily="@font/helvetica_nueu_light"
                                    android:hint="example@gmail.com"
                                    android:inputType="textEmailAddress"
                                    android:paddingHorizontal="11dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp">

                                <TextView
