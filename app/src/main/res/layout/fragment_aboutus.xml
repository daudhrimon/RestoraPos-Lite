<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fragment.AboutUsFragment">

    <RelativeLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:animateLayoutChanges="true"
        android:background="@drawable/bottom_rounded_bg"
        android:paddingVertical="@dimen/_4sdp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="6dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/selector_cross_btn"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            app:tint="@color/back_btn_tint"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_toRightOf="@+id/back"
            android:fontFamily="@font/helvetica_nueu_light"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:text="About Restora POS Premium"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="88dp"
        android:layout_marginVertical="19dp"
        android:src="@drawable/restora_pos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_top_rounded"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ic_baseline_arrow_drop_up_24"
            android:layout_weight=".4"
            android:background="@color/trans"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.6"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_neue"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Features Of Restora POS"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Restaurant POS Billing Service"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Restaurant Inventory Tracking System"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Recipe Management System"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Restaurant Accounting System"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Built-in Online Food Ordering System"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Restaurant Reservation System"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Dynamic Real-time KDS System"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/helvetica_neue"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Extraordinary Features Of Restora POS"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Branded Website And App Integration"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Online And Offline Order Management"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Digital menu, contactless order taking and payment system"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Table Reservation System"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Dynamic Business Decision Making Dashboard"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Well Ordered Human Resource"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Waiter, Kitchen Mobile and Tablet Apps"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Real-time Kitchen Monitoring System"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="Order Queue Monitoring System"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_stars_24"
                    android:drawablePadding="9dp"
                    android:fontFamily="@font/helvetica_nueu_light"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingStart="8dp"
                    android:text="No User restrictions"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:background="#9DCCAC"
            android:fontFamily="@font/helvetica_neue"
            android:gravity="center_vertical"
            android:paddingHorizontal="22dp"
            android:paddingTop="4dp"
            android:text="Contact Us"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:background="@color/bg_color"
            android:orientation="horizontal"
            android:paddingHorizontal="9dp"
            android:paddingTop="4dp"
            android:paddingBottom="12dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.9"
                android:orientation="vertical"
                android:weightSum="3">

                <androidx.cardview.widget.CardView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/bg_color"
                    app:cardCornerRadius="4dp"
                    app:cardElevation=".4dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="3dp"
                            android:padding="1dp"
                            android:src="@drawable/ic_baseline_email_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/helvetica_nueu_light"
                            android:gravity="center_vertical"
                            android:text="info@restorapos.com"
                            android:textColor="@color/theme_color"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/bg_color"
                    app:cardCornerRadius="5dp"
                    app:cardElevation=".5dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="3dp"
                            android:padding="1dp"
                            android:src="@drawable/ic_baseline_phone_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/helvetica_nueu_light"
                            android:gravity="center_vertical"
                            android:text="+880 1531-987110"
                            android:textColor="@color/theme_color"
                            android:textSize="15sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/webSite"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/bg_color"
                    app:cardCornerRadius="5dp"
                    app:cardElevation=".5dp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="3dp"
                            android:src="@drawable/ic_baseline_home_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/helvetica_nueu_light"
                            android:gravity="center_vertical"
                            android:text="restorapos.com"
                            android:textColor="@color/theme_color"
                            android:textSize="16sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="14dp"
                android:layout_weight=".01"
                android:background="@color/gray_btn_bg_pressed_color" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/_69sdp"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:layout_weight="1.09"
                app:cardBackgroundColor="@color/bg_color"
                app:cardCornerRadius="5dp"
                app:cardElevation=".5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/restora_logo" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>