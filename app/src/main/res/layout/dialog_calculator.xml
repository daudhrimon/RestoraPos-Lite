<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dialog.CalculatorDialog"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/theme_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/helvetica_nueu_light"
                android:text="Calculator"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />

            <ImageView
                android:id="@+id/closeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/selector_cross_btn"
                android:clickable="true"
                android:padding="3dp"
                android:src="@drawable/ic_close_white"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                android:focusable="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/workingsTV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="#E7F0F5"
                android:fontFamily="@font/helvetica_nueu_thin"
                android:gravity="center_vertical"
                android:paddingRight="30dp"
                android:text=""
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="30sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/resultsTV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="#E7F0F5"
                android:fontFamily="@font/helvetica_nueu_thin"
                android:gravity="center_vertical"
                android:paddingRight="30dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/theme_color"
                android:textSize="45sp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4">

                <TextView
                    android:id="@+id/clearOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="C"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/bracketsOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="()"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/powerOfOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="^"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/divisionOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button02"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="/"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:focusable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4">

                <TextView
                    android:id="@+id/sevenOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="7"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/eightOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="8"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/nineOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="9"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/timesOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button02"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="X"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:focusable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4">

                <TextView
                    android:id="@+id/fourOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="4"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/fiveOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/sixOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="6"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/minusOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button02"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="-"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:focusable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4">

                <TextView
                    android:id="@+id/oneOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/twoOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/threeOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/plusOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button02"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="+"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:focusable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:weightSum="4">

                <TextView
                    android:id="@+id/zeroOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    tools:ignore="OnClick"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/decimalOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button01"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:focusable="true" />


                <TextView
                    android:id="@+id/equalsOnClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_calculator_button02"
                    android:clickable="true"
                    android:fontFamily="@font/helvetica_nueu_thin"
                    android:gravity="center"
                    android:text="="
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    tools:ignore="UsingOnClickInXml"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>