<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_39sdp"
            android:background="@color/theme_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:fontFamily="@font/helvetica_nueu_light"
                android:text="Add Customer"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

            <ImageView
                android:id="@+id/crossBtn"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/selector_cross_btn"
                android:clickable="true"
                android:padding="3dp"
                android:src="@drawable/ic_close_white"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/addCview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_18sdp">

                    <TextView
                        android:id="@+id/nameHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/helvetica_nueu_light"
                        android:text="Name"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/cusNameEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_below="@+id/nameHeader"
                        android:background="@drawable/no_radius_background"
                        android:fontFamily="@font/helvetica_nueu_light"
                        android:hint="Customer name"
                        android:inputType="textCapWords"
                        android:paddingHorizontal="11dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="TouchTargetSizeCheck" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/emailHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/helvetica_nueu_light"
                        android:text="Email"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/cusEmailEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_below="@+id/emailHeader"
                        android:background="@drawable/no_radius_background"
                        android:fontFamily="@font/helvetica_nueu_light"
                        android:hint="example@gmail.com ( Optional )"
                        android:inputType="textEmailAddress"
                        android:paddingHorizontal="11dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="TouchTargetSizeCheck" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/mobileHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/helvetica_nueu_light"
                        android:text="Mobile"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/cusMobileEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_below="@+id/mobileHeader"
                        android:background="@drawable/no_radius_background"
                        android:fontFamily="@font/helvetica_nueu_light"
                        android:hint="Customer Mobile"
                        android:inputType="phone"
                        android:paddingHorizontal="11dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="TouchTargetSizeCheck" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/addressHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/helvetica_nueu_light"
                        android:text="Address"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/cusAddEt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_below="@+id/addressHeader"
                        android:background="@drawable/no_radius_background"
                        android:fontFamily="@font/helvetica_nueu_light"
                        android:hint="Customer Address"
                        android:inputType="textPostalAddress"
                        android:paddingHorizontal="11dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="TouchTargetSizeCheck" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/closeBtn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_33sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_today"
                        android:fontFamily="@font/helvetica_nueu_light"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="Close"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/submitBtn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_33sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_ongoing"
                        android:fontFamily="@font/helvetica_nueu_light"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.cardview.widget.CardView>