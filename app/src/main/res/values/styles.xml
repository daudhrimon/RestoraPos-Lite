<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="spinnerTheme">
        <item name="background">?android:selectableItemBackground</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@color/black</item>
        <item name="android:overlapAnchor" tools:ignore="NewApi">true</item>
    </style>

    <style name="TextAppearance.tabText" parent="@style/TextAppearance.AppCompat">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/helvetica_nueu_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>