<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="@dimen/_9sdp"
    app:cardCornerRadius="10dp"
    android:foreground="@drawable/selector_food"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:elevation="3dp"
            android:scaleType="fitXY"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/foodTile"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/helvetica_nueu_light"
            android:gravity="center"
            android:maxLines="2"
            android:text="Chicken Special \nTanduri Egg"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/foodVariant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:gravity="center"
            android:text="Small"
            android:textAlignment="textStart"
            android:textColor="#7E7C7C"
            android:textSize="12sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/foodPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/helvetica_nueu_light"
            android:gravity="center"
            android:text="225.00"
            android:textAlignment="textStart"
            android:textColor="#0A5F00"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

    </LinearLayout>

</androidx.cardview.widget.CardView>