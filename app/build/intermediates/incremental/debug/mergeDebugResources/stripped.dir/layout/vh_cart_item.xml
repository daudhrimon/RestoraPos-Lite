<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="6dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#fff">

           <TextView
               android:id="@+id/foodItem"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:textSize="12sp"
               android:padding="5dp"
               android:textAlignment="viewStart"
               android:text="Chicken Tanduri Fry"
               android:textColor="@color/overlay_dark"
               android:fontFamily="@font/helvetica_nueu_light"
               android:layout_gravity="center"
               tools:ignore="RtlCompat" />

           <TextView
               android:id="@+id/foodVariant"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:textSize="12sp"
               android:layout_gravity="center"
               android:text="Small"
               android:fontFamily="@font/helvetica_nueu_light"
               android:textColor="@color/overlay_dark" />

           <TextView
               android:id="@+id/totalUnitPrice"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:fontFamily="@font/helvetica_nueu_light"
               android:layout_gravity="center"
               android:gravity="center"
               android:textSize="12sp"
               android:text="100"
               android:textColor="@color/overlay_dark" />

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_gravity="center_vertical"
               android:orientation="horizontal"
               android:layout_marginStart="6dp"
               android:paddingVertical="3dp"
               android:weightSum="3">

               <ImageView
                   android:id="@+id/plusBtnC"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/selector_plus"
                   android:clickable="true"
                   android:src="@drawable/ic_plus_button" />

               <TextView
                   android:id="@+id/foodQuantity"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_margin="7dp"
                   android:text="02"
                   android:fontFamily="@font/helvetica_nueu_light"
                   android:layout_gravity="center"
                   android:textAlignment="center"
                   android:textSize="13sp"
                   android:textColor="@color/overlay_dark" />

               <ImageView
                   android:id="@+id/minusBtnC"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/selector_plus"
                   android:clickable="true"
                   android:src="@drawable/ic_minus_button" />

           </LinearLayout>

           <ImageView
               android:id="@+id/deleteBtnC"
               android:layout_width="@dimen/_26sdp"
               android:layout_height="match_parent"
               android:layout_marginVertical="5.5dp"
               android:layout_marginHorizontal="18dp"
               android:paddingHorizontal="9dp"
               android:scaleType="fitCenter"
               android:layout_gravity="center"
               android:src="@drawable/ic_delete_red"
               android:background="@drawable/selector_plus"
               android:clickable="true"
               android:textColor="@color/overlay_dark" />

       </LinearLayout>

       <TextView
           android:id="@+id/noteTv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#fff"
           android:text="Item note"
           android:layout_marginBottom="5dp"
           android:layout_marginHorizontal="5dp"
           android:textColor="@color/color_red"
           android:fontFamily="@font/helvetica_nueu_light"
           android:textSize="10sp"
           android:visibility="gone"/>

   </LinearLayout>

</androidx.cardview.widget.CardView>